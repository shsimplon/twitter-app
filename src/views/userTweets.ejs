<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Twitter</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="icon" href="/images/iconTwitter.png">
</head>

<body>
    <section class="section-accueil">

        <div class="tweet-navigation">
            <img class="tweet-navigation-image" src="/images/logoTwitter.png" alt="">
            <div class="tweet-navigation-link">
                <a href="/">
                    <img src="/images/home-run.png" alt="">
                    <h2>Home</h2>
                </a>
                <a href="">
                    <img src="/images/hastag.png" alt="">
                    <h2>Explore</h2>
                </a>
                <a href="">
                    <img src="/images/bookmark.png" alt="">
                    <h2>Bookmarks</h2>
                </a>
                <a href="/username">
                    <img src="/images/user.png" alt="">
                    <h2>My Tweets</h2>
                </a>
                <a href="/logout">
                    <img src="/images/logout.png" alt="">
                    <h2>Logout</h2>
                </a>
            </div>
        </div>

        <div class="tweet-container">
            <div class="tweet-container-title">
                <h3> Connecté en tant que:
                    <%= userTweet[0].first_name %>
                        <%= userTweet[0].last_name %>


                </h3>
            </div>
            <div class="tweet-container-profile">
                <div class="tweet-container-profile-background">
                    <img src="/images/bookmark.png" alt="">
                </div>
                <div class="tweet-container-profile-picture">
                    <img src="/images/home-run.png" alt="">
                </div>
                <div class="tweet-container-profile-infos">

                    <h3>
                        <%= userTweet[0].first_name %>
                            <%= userTweet[0].last_name %>
                    </h3>
                    <h4>@
                        <%= userTweet[0].username %>
                    </h4>
                    <p>
                        <%= userTweet[0].city %>
                    </p>
                </div>
            </div>

            <div class="comments">
                <% userTweet.forEach((tweet) => { %>
                    <div class="comments-comment">
                        <a href="/users/<%=tweet.id_user%>/tweets/<%=tweet.id%>"></a>
                        <div class="comments-comment-content">
                            <div class="comments-comment-content-nameDate">
                                <a href="/username">
                                    <h3 class="comments-comment-content-username">
                                        <%= tweet.username %>
                                    </h3>
                                </a>
                                <span class="comments-comment-content-date"><%= tweet.creation_date %></span>
                            </div>
                            <!-- route vers le détail d'un tweet -->
                            <a href="/users/<%=tweet.id_user%>/tweets/<%=tweet.id%>">

                                <p class="comments-comment-content-text">
                                    <%= tweet.text %>
                                </p>
                            </a>
                        </div>
                    </div>
                    <% }) %>
            </div>

        </div>

        <div class="tweet-search"></div>

    </section>
</body>

</html>