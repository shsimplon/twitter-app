<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Twitter</title>
    <link rel='stylesheet' type='text/css' media='screen' href='/css/style.css'>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="icon" href="/images/iconTwitter.png">
</head>

<body>



    <section class="section-accueil">

        <div class="tweet-navigation">
            <img class="tweet-navigation-image" src="/images/logoTwitter.png" alt="">
            <div class="tweet-navigation-link">

                <ul>

                    <h2><a href="/login">Login </h2></a>

                        <h2> <a href="/signup">Signup</h2></a>

                            <a href="">
                                <img src="/images/home-run.png" alt="">
                                <h2>Home</h2>
                            </a>
                            <a href="">
                                <img src="/images/hastag.png" alt="">
                                <h2>Explore</h2>
                            </a>
                            <a href="">
                                <img src="/images/bookmark.png" alt="">
                                <h2>Bookmarks</h2>
                            </a>
                            <a href="/username">
                                <img src="/images/user.png" alt="">
                                <h2> My Tweets</h2>
                            </a>
                            <a href="/logout">
                                <img src="/images/logout.png" alt="">
                                <h2>Logout</h2>
                            </a>
                </ul>
            </div>
        </div>

        <div class="tweet-container">
            <div class="tweet-container-title">
                <h3>
                    <HOME>
                </h3>
            </div>
            <!-- mettre la route ouù il doit se dériger -->
            <form action="/addTweet" method="post" class="tweet-container-form">
                <div class="tweet-container-message">
                    <label for="message"></label>
                    <div class="tweet-container-text">
                        <textarea name="text" id="message" placeholder="Whats's happening ? "></textarea>
                    </div>

                </div>
                <div class="tweet-container-button">
                    <button type="submit" class="tweet-button">Tweet</button>
                </div>

            </form>

            <div class="comments">






                <%tweets.forEach((tweet) => {%>


                    <div class="comments-comment">
                        <a href="/addTweet/<%=tweet.id %>"><img src="" alt=""></a>
                        <div class="comments-comment-content">
                            <div class="comments-comment-content-nameDate">
                                <a href="/tweets/<%= tweet.id_user %>">
                                    <h3 class="comments-comment-content-username">
                                        <%= tweet.username %>
                                    </h3>
                                </a>
                                <span class="comments-comment-content-date"><%= tweet.creation_date %></span>
                            </div>
                            <p class="comments-comment-content-text">
                                <%= tweet.text %>
                            </p>
                        </div>
                    </div>



                    <%})%>

            </div>


















        </div>

        <div class="tweet-search"></div>

    </section>
</body>

</html>